<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Caminar">

    <!-- LinearLayout horizontal para el título y el botón de regreso -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:padding="10dp">
        <!-- Botón de regreso -->
        <Button
            android:id="@+id/back_Regreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:layout_gravity="start"
            android:layout_margin="16dp"/>
        <!-- Título -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tus Alternativas"
            android:textSize="30dp"
            android:textStyle="bold" />


    </LinearLayout>


    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Verduras"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView


        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:layout_margin="8dp"
        android:text="Espinacas: Rica en hierro, calcio y antioxidantes. Brócoli: Fuente de fibra, vitamina C y ácido fólico. Zanahorias: Altas en vitamina A, beneficiosas para la salud ocular. Coliflor: Rica en vitamina C, ácido fólico y fibra. Pimientos: Contienen vitamina C, antioxidantes y son bajos en calorías. Calabacín: Bajo en calorías y rico en fibra y potasio. Pepino: Alto contenido de agua, refrescante y bajo en calorías. Tomate: Fuente de licopeno, antioxidante que puede ayudar a prevenir enfermedades. Espinacas: Ricas en hierro y vitamina K, beneficiosas para la salud ósea. Champiñones: Bajos en calorías y ricos en antioxidantes y vitamina D."
        android:textAlignment="textStart" />

    <ImageView
        android:id="@+id/compartirEtiquetado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/whats_compartir" />
</LinearLayout>