<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Caminar">

    <!-- LinearLayout horizontal para el título y el botón de regreso -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:padding="10dp">
        <!-- Botón de regreso -->
        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:layout_gravity="start"
            android:layout_margin="16dp"/>
        <!-- Título -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Correr"
            android:textStyle="bold"
            android:textSize="30dp"/>


    </LinearLayout>



    <ImageView
        android:layout_width="413dp"
        android:layout_height="374dp"
        android:src="@drawable/correr"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Correr"
        android:textStyle="bold"
        android:textSize="16dp"
        android:padding="5dp"/>

    <TextView


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Para obtener los máximos beneficios al correr, es recomendable comenzar con un calentamiento adecuado para preparar los músculos y articulaciones. Durante la carrera, es importante mantener una técnica de respiración constante y una postura erguida para maximizar la eficiencia y reducir el riesgo de lesiones. Después de correr, es fundamental realizar ejercicios de enfriamiento y estiramientos para ayudar en la recuperación muscular y prevenir la rigidez. Es importante aumentar gradualmente la intensidad y la duración de la carrera para evitar el agotamiento y las lesiones."
        android:textAlignment="textStart" />

    <ImageView
        android:id="@+id/compartirCaminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/whats_compartir" />
</LinearLayout>