<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Caminar">

    <!-- LinearLayout horizontal para el título y el botón de regreso -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:padding="10dp">
        <!-- Botón de regreso -->
        <Button
            android:id="@+id/back_Regreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:layout_gravity="start"
            android:layout_margin="16dp"/>
        <!-- Título -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tus Alternativas"
            android:textSize="30dp"
            android:textStyle="bold" />


    </LinearLayout>


    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Frutas"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView


        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:layout_margin="8dp"
        android:text="Plátano: Rico en potasio y carbohidratos, ideal para aumentar la energía. Manzana: Fuente de fibra y antioxidantes, ayuda a mantener la saciedad. Naranja: Alta en vitamina C, fortalece el sistema inmunológico. Pera: Rica en fibra y vitaminas, ayuda a regular el tránsito intestinal. Kiwi: Contiene vitamina C, vitamina K y fibra, beneficioso para la digestión. Fresas: Bajas en calorías y altas en vitamina C y antioxidantes. Piña: Rica en bromelina, enzima que facilita la digestión de las proteínas. Mango: Dulce y sabroso, rico en vitamina A y antioxidantes. Sandía: Alta en agua, refrescante y baja en calorías. Uvas: Fuente de antioxidantes y resveratrol, beneficioso para la salud cardiovascular."
        android:textAlignment="textStart" />

    <ImageView
        android:id="@+id/compartirEtiquetado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/whats_compartir" />
</LinearLayout>